<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout_main_recyclerUser"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:elevation="4dp"
    android:background="@drawable/background_item_recycler"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/avatar"
            android:layout_width="@dimen/height_avatar_recycler"
            android:layout_height="@dimen/height_avatar_recycler"
            android:src="@drawable/ic_user_512dp"
            android:id="@+id/imageView_avatar_recyclerUser"/>

        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:lines="1"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                tools:text="Scree name"
                android:id="@+id/textView_screenName_recyclerUser"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:textSize="16sp"/>

            <com.google.android.material.textview.MaterialTextView
                android:lines="1"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                tools:text="user name"
                android:layout_height="wrap_content"
                android:id="@+id/textView_name_recyclerUser"
                android:textSize="14sp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/unmute"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:padding="0dp"
            android:id="@+id/textView_unMute"/>

</LinearLayout>