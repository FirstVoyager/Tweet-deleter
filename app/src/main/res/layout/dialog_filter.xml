<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">

    <View
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:layout_width="25dp"
        android:layout_height="8dp"
        android:background="@drawable/view_top_bottom_sheet"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputEditText
                    android:hint="@string/t_text_filter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="?actionBarSize"
                    android:layout_weight="1"
                    android:id="@+id/editText_text"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:visibility="invisible"
                        tools:visibility="visible"
                        android:layout_width="@dimen/height_progress"
                        android:layout_height="@dimen/height_progress"
                        android:layout_gravity="center"
                        android:id="@+id/progressBar_text"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/Widget.AppCompat.ActionButton"
                        android:src="@drawable/ic_add_black_24dp"
                        app:fabSize="mini"
                        android:id="@+id/imageButton_addText"/>

                </FrameLayout>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/hint_text_filter"/>

            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/chipGroup_text" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_user"
                    android:layout_weight="1"
                    android:minHeight="?actionBarSize"
                    android:hint="@string/t_user_filter"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:visibility="invisible"
                        tools:visibility="visible"
                        android:layout_width="@dimen/height_progress"
                        android:layout_height="@dimen/height_progress"
                        android:layout_gravity="center"
                        android:id="@+id/progressBar_users"/>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/Widget.AppCompat.ActionButton"
                        android:src="@drawable/ic_person_add_black_24dp"
                        app:fabSize="mini"
                        android:id="@+id/imageButton_addUser"/>

                </FrameLayout>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                android:padding="2dp"
                android:text="@string/hint_user_filter"/>


            <com.google.android.material.chip.ChipGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleLine="false"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/chipGroup_users"/>

            <LinearLayout
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBar_delay"
                    android:max="20"
                    android:progress="1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2s"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/black"
                    android:padding="4dp"
                    android:id="@+id/textView_delayDelete"/>

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Caption"
                android:text="@string/hint_time_filter"
                android:padding="2dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:textColor="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/t_close"
        android:id="@+id/button_close"
        style="@style/Widget.MaterialComponents.Button.TextButton"/>

</LinearLayout>